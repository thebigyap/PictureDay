<Window x:Class="PictureDay.Views.UpdateWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="PictureDay Update" Height="300" Width="500"
		WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
		Background="{DynamicResource BackgroundBrush}">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" x:Name="TitleTextBlock"
				   Text="Checking for updates..."
				   FontSize="16" FontWeight="Bold"
				   Margin="0,0,0,20"
				   Foreground="{DynamicResource TextBrush}"/>

		<StackPanel Grid.Row="1" x:Name="ContentPanel">
			<TextBlock x:Name="MessageTextBlock"
					   Text="Checking for updates..."
					   TextWrapping="Wrap"
					   Margin="0,0,0,20"
					   Foreground="{DynamicResource TextBrush}"/>

			<ProgressBar x:Name="DownloadProgressBar"
						Height="20"
						Minimum="0" Maximum="100"
						Value="0"
						Visibility="Collapsed"
						Margin="0,0,0,10"/>

			<TextBlock x:Name="ProgressTextBlock"
					   Text=""
					   HorizontalAlignment="Center"
					   Visibility="Collapsed"
					   Foreground="{DynamicResource TextBrush}"/>
		</StackPanel>

		<StackPanel Grid.Row="2" Orientation="Horizontal"
					HorizontalAlignment="Right"
					Margin="0,0,0,10">
			<Button x:Name="YesButton" Content="Yes"
					Padding="15,5" Margin="5,0"
					Click="YesButton_Click"
					Visibility="Collapsed"/>
			<Button x:Name="NoButton" Content="No"
					Padding="15,5" Margin="5,0"
					Click="NoButton_Click"
					Visibility="Collapsed"/>
			<Button x:Name="CloseButton" Content="Close"
					Padding="15,5" Margin="5,0"
					Click="CloseButton_Click"/>
		</StackPanel>

		<Button Grid.Row="3" x:Name="DownloadButton"
				Content="Download Update"
				Padding="15,5"
				HorizontalAlignment="Stretch"
				Click="DownloadButton_Click"
				Visibility="Collapsed"/>
	</Grid>
</Window>
